			else:
				return L(n-1) + c*L(n-1)*H(n-1)-(d*L(n-1))/nperiod
		time=10
		nn=range(time)
		HH = [H(n) for n in nn]
		LL = [L(n) for n in nn]
		nH = list(zip(nn, HH))
		nL = list(zip(nn, LL))
